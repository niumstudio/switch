// typo defaults
a:link, a:visited
    color: brand0
    text-decoration: none
p a:link,
p a:visited,
li a:link,
li a:visited
    text-decoration: underline

#navHeader a:link, #navHeader a:visited
    color: white

.activeLink
    font-weight: 600 !important

// custom typo
ul
    margin-bottom: 2em
    padding-left: 0
    width:95%

ul li
    font-size: 1.1em
    line-height: 1.3em
    margin-bottom: 0.4em
    list-style-type: none
    padding-bottom: 1em
    padding-top: 1em
    padding-right: 1em
    border-bottom: 1px solid blackAlp10
ul li:last-child
    border-bottom: none
ul li:first-child
    padding-top: 0
ul.light li
    border-bottom: 1px solid whiteAlp50

// picturefill-bg and image teaser
*.picturefill-background a
    color: brand1 
@media ttrigger
    *.picturefill-background.lighten1,
    *.picturefill-background.lighten1 a,
    *.picturefill-background.lighten2,
    *.picturefill-background.lighten2 a
    *.picturefill-background.darktext,
    *.picturefill-background.darktext a
        color: blackAlp50
    *.picturefill-background.lighttext,
    *.picturefill-background.lighttext a
        color: white      
*.picturefill-background a
    //text-decoration: underline



.activeLink, 
nav a:hover,
p a:hover,
li a:hover,
*.picturefill-background a:hover
    color: brand1 !important
    transition: 300ms
.activeLink,
nav a:hover
    border-bottom-color: brand1 !important


// nav typo
nav > *
    font-weight:800 !important
    padding: 0 padXXS*1.25
    @media dtrigger
        font-size:0.95em !important

/* dark slider nav */    
body.darkSlider > header.fixed .siteLogo span,
body.darkSlider > header.fixed nav a.activeLink
    color: white !important
body.darkSlider > header.fixed nav a,
body.darkSlider > header.fixed nav a.ctaButton
    color: brand1 !important
    border-color: brand1 !important
body.darkSlider > header.fixed nav a:hover
    color: brand2 !important
    border-color: brand2 !important

/* light slider nav */    
body.lightSlider > header.fixed .siteLogo span,
body.lightSlider > header.fixed nav a.activeLink
    color: brand2 !important
body.lightSlider > header.fixed nav a,
body.lightSlider > header.fixed nav a.ctaButton
    color: brand1 !important
    border-color: brand1 !important
body.lightSlider > header.fixed nav a:hover
    color: brand2 !important
    border-color: brand1 !important
    
/* dark theme navs */ 
body.darkTheme > header.sticky .siteLogo span,
body.darkTheme > header.sticky nav a.activeLink
    color: brand0 !important
body.darkTheme > header.sticky nav a,
body.darkTheme > header.sticky nav a.ctaButton
    color: white !important
    border-color: white !important    
body.darkTheme > header.sticky nav a:hover
    color: brand0 !important
    border-color: brand0 !important


/* light theme navs */
body.lightTheme > header.sticky .siteLogo span,
body.lightTheme > header.sticky nav a.activeLink
    color: brand0 !important
body.lightTheme > header.sticky nav a,
body.lightTheme > header.sticky nav a.ctaButton
    color: brand1 !important
    border-color: brand1 !important    
body.lightTheme > header.sticky nav a:hover
    color: brand0 !important
    border-color: brand0 !important


h1, h2, h3, h4 ,h5, h6
    margin: 0
    margin-bottom: marXXS

// defaults   
h1
    font-weight: 1000
    font-size: 4.5em
    line-height: 1.05em
    letter-spacing: -0.01em
    color: brand0
h1 span
    color: brand1
h2
    font-weight: 1000
    font-size: 3.6em
    line-height: 105%
    letter-spacing: -0.01em
h2 span
    color: brand1
    //letter-spacing: -0.015em    
h3
    font-weight: 600
    font-size: 2em
    line-height: 115%
    //letter-spacing: -0.035em
h3 span
    font-weight: 300
    letter-spacing: -0.01em    
h4
    font-weight: 300
    font-size: 1.4em
    line-height: 120%
    //letter-spacing: -0.01em
h4 span
    font-weight: 400    
h5
    font-weight: 400
    font-size: 1.32em
    line-height: 125%
    max-width:90%
    //letter-spacing: -0.02em
h5 span
    font-weight: 400
    //letter-spacing: -0.01em      
h6
    font-weight: 500
    font-size:0.9em
    line-height: 130%
    max-width:90%
    //letter-spacing: -0.015em
p
    font-weight: 400
    font-size: 1.1em
    line-height: 1.4em
    //letter-spacing: -0.025em
    margin-top: 0em
strong 
    font-weight: 800
    //letter-spacing: -0.015em

// modify typo
.small
    font-size: 0.7em    



// footer
body > footer
    font-size: 0.9em
    line-height: 1.4em
body > footer p a
    font-size:1em
    line-height: 160%    
body > footer h6
    font-weight: 700
    font-size:1em
    line-height: 120%
    color: brand2


@media phoneRule
    h1
        font-size: 2.4em   
        line-height: 105%
    *.picturefill-background h1
        font-size: 2.4em   
        line-height: 105%    
    h2
        font-size: 2.2em
        line-height: 110%
        //width:85%
    h3
        font-size: 1.4em
        line-height: 110%
    h4
        font-size: 1.3em
        line-height: 120%
    h5
        font-size: 1.2em
        line-height: 110%
    h6
        font-size: 0.9em
        line-height: 110%

    p
        font-size: 1em
    h1, h2, h3, h4, h5, h6, p
        margin-bottom: 0.25em;


@media tabletRule
    h1
        font-size: 3.8em
    h2
        font-size: 3.2em

